# WatchHamster Tauri 환경 변수 설정

# 개발 모드 설정
NODE_ENV=development
VITE_APP_NAME=WatchHamster
VITE_APP_VERSION=1.0.0

# API 서버 설정
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws

# Python 백엔드 설정
PYTHON_BACKEND_HOST=127.0.0.1
PYTHON_BACKEND_PORT=8000
PYTHON_BACKEND_DEBUG=true

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=watchhamster-backend.log

# 보안 설정 (프로덕션에서는 반드시 변경)
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 웹훅 설정
WEBHOOK_TIMEOUT=30
MAX_WEBHOOK_RETRIES=3

# 모니터링 설정
METRICS_RETENTION_HOURS=24
HEALTH_CHECK_INTERVAL=60

# POSCO 특화 설정
POSCO_THEME_ENABLED=true
KOREAN_LOCALE=ko-KR

# 개발 도구 설정
VITE_DEVTOOLS=true
TAURI_DEBUG=true
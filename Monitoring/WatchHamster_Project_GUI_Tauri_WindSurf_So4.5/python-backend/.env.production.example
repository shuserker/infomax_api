# WatchHamster Backend 프로덕션 환경 설정

# 서버 설정 (프로덕션)
APP_NAME=WatchHamster Backend
APP_VERSION=1.0.0
DEBUG=false

# API 설정
API_HOST=0.0.0.0
API_PORT=9001
API_PREFIX=/api

# CORS 설정 (프로덕션용 - 실제 도메인으로 교체)
CORS_ORIGINS=https://your-domain.com,https://api.your-domain.com

# 로깅 설정 (프로덕션)
LOG_LEVEL=WARNING
LOG_FILE=watchhamster-backend.log
LOG_MAX_SIZE=52428800  # 50MB
LOG_BACKUP_COUNT=10

# 데이터베이스 설정
DATABASE_URL=postgresql://user:password@localhost:5432/watchhamster

# 보안 설정 (반드시 변경!)
SECRET_KEY=your-super-secure-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 외부 서비스 설정
WEBHOOK_TIMEOUT=10
MAX_WEBHOOK_RETRIES=2

# 모니터링 설정 (프로덕션)
METRICS_RETENTION_HOURS=168  # 7일
HEALTH_CHECK_INTERVAL=30

# SSL/TLS 설정 (HTTPS 필요시)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

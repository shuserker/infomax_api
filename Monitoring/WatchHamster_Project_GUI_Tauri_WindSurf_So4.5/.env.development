# WatchHamster Tauri 개발 환경 설정

# API 설정
VITE_API_BASE_URL=http://localhost:9001
VITE_WS_URL=ws://localhost:9001/ws

# 애플리케이션 정보
VITE_APP_NAME=WatchHamster Tauri
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=현대적인 WatchHamster GUI 시스템

# 개발 모드 설정
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug
VITE_ENABLE_DEVTOOLS=true

# 기능 플래그
VITE_ENABLE_HOT_RELOAD=true
VITE_ENABLE_ERROR_OVERLAY=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# UI 설정
VITE_DEFAULT_THEME=light
VITE_ENABLE_ANIMATIONS=true
VITE_REFRESH_INTERVAL=5000

# 테스트 설정
VITE_MOCK_API=false
VITE_TEST_MODE=false

# 보안 설정 (개발용)
VITE_ENABLE_CORS=true
VITE_ALLOW_UNSAFE_EVAL=true
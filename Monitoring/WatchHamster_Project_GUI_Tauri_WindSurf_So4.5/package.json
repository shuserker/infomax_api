{
  "name": "watchhamster-tauri",
  "private": true,
  "version": "2.0.0",
  "description": "WatchHamster GUI 시스템의 현대적인 Tauri 버전 - React + TypeScript + Chakra UI",
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev-server.js",
    "dev:frontend": "vite",
    "dev:backend": "cd python-backend && python main.py",
    "dev:tauri": "node scripts/dev-server.js --tauri",
    "dev:legacy": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "setup": "node scripts/dev-setup.js",
    "debug": "node scripts/debug-tools.js",
    "debug:full": "node scripts/debug-tools.js full",
    "debug:monitor": "node scripts/debug-tools.js monitor",
    "build": "vite build",
    "build:check": "tsc && vite build",
    "build:tauri": "tauri build",
    "build:production": "node scripts/build-production.js",
    "build:cross-platform": "node scripts/cross-platform-build.js",
    "build:windows": "node scripts/cross-platform-build.js windows",
    "build:macos": "node scripts/cross-platform-build.js macos",
    "build:linux": "node scripts/cross-platform-build.js linux",
    "build:analyze": "npm run build -- --analyze",
    "package": "node scripts/package-installer.js",
    "package:all": "npm run build:cross-platform && npm run package",
    "deploy": "node scripts/deploy-pipeline.js",
    "deploy:staging": "node scripts/deploy-pipeline.js --environment staging",
    "deploy:production": "node scripts/deploy-pipeline.js --environment production",
    "update:check": "node scripts/auto-updater.js check",
    "update:config": "node scripts/auto-updater.js config",
    "validate:deployment": "node scripts/deployment-validator.js",
    "validate:quick": "node scripts/deployment-validator.js --test-mode quick",
    "benchmark": "node scripts/performance-benchmark.js",
    "benchmark:quick": "node scripts/performance-benchmark.js --duration 30000 --iterations 5",
    "preview": "vite preview",
    "tauri": "tauri",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:integration": "vitest --run src/test/integration",
    "test:integration:watch": "vitest src/test/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:services": "vitest --run src/pages/__tests__/Services",
    "test:services:integration": "vitest --run src/pages/__tests__/Services.integration.test.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "rimraf dist node_modules/.vite python-backend/__pycache__ src-tauri/target/debug",
    "clean:all": "npm run clean && rimraf node_modules python-backend/venv",
    "health": "node scripts/debug-tools.js network"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@hookform/resolvers": "^5.2.2",
    "@monaco-editor/react": "^4.7.0",
    "@tanstack/react-query": "^5.8.4",
    "@tauri-apps/api": "^1.5.1",
    "@types/ws": "^8.18.1",
    "ace-builds": "^1.43.3",
    "axios": "^1.6.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^10.16.4",
    "monaco-editor": "^0.53.0",
    "react": "^18.2.0",
    "react-ace": "^14.0.1",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.63.0",
    "react-icons": "^4.12.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.18.0",
    "react-window": "^1.8.8",
    "react-window-infinite-loader": "^2.0.0",
    "recharts": "^2.15.4",
    "ws": "^8.18.3",
    "yup": "^1.7.1",
    "zustand": "^4.4.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@tauri-apps/cli": "^1.5.6",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/axios": "^0.14.4",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "fp-ts": "^2.16.11",
    "happy-dom": "^19.0.2",
    "io-ts": "^2.2.22",
    "jsdom": "^22.1.0",
    "playwright": "^1.55.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vite": "^5.4.10",
    "vitest": "^3.2.4",
    "vitest-canvas-mock": "^0.3.3",
    "zod": "^4.1.11"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "tauri",
    "react",
    "typescript",
    "chakra-ui",
    "monitoring",
    "system-monitor",
    "desktop-app",
    "cross-platform",
    "posco",
    "watchhamster"
  ],
  "author": {
    "name": "WatchHamster Team",
    "email": "watchhamster@posco.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/posco/watchhamster-tauri.git"
  },
  "bugs": {
    "url": "https://github.com/posco/watchhamster-tauri/issues"
  },
  "homepage": "https://github.com/posco/watchhamster-tauri#readme"
}

# WatchHamster Python 백엔드 환경 변수

# 서버 설정
APP_NAME=WatchHamster Backend
APP_VERSION=1.0.0
DEBUG=true

# API 설정
API_HOST=127.0.0.1
API_PORT=8000
API_PREFIX=/api

# CORS 설정 (쉼표로 구분)
CORS_ORIGINS=http://localhost:1420,http://localhost:3000,tauri://localhost,https://tauri.localhost

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=watchhamster-backend.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# 데이터베이스 설정 (향후 사용)
DATABASE_URL=sqlite:///./watchhamster.db

# 보안 설정
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 외부 서비스 설정
WEBHOOK_TIMEOUT=30
MAX_WEBHOOK_RETRIES=3

# 모니터링 설정
METRICS_RETENTION_HOURS=24
HEALTH_CHECK_INTERVAL=60

# 기존 WatchHamster 설정 경로
LEGACY_CONFIG_PATH=../../config
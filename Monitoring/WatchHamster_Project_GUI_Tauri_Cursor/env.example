# WatchHamster Cursor 프로젝트 환경 설정
# 이 파일을 .env로 복사하고 실제 값으로 수정하세요

# API 설정
INFOMAX_API_URL=https://global-api.einfomax.co.kr/apis/posco/news
INFOMAX_API_USER=your_api_user
INFOMAX_API_PASSWORD=your_api_password
API_TIMEOUT=30
API_RETRY_ATTEMPTS=3

# 웹훅 설정
POSCO_WEBHOOK_URL=https://infomax.dooray.com/services/3262462484277387103/4121380745073081229/5FbudzTwTki4wCeBszBrAg
WATCHHAMSTER_WEBHOOK_URL=https://infomax.dooray.com/services/3262462484277387103/3281274580264701322/nKUfZnjtRS2rHh-E9i9uZQ
WEBHOOK_TIMEOUT=10
WEBHOOK_RETRY_ATTEMPTS=3

# 서버 설정
API_HOST=localhost
API_PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# 모니터링 설정
PROCESS_CHECK_INTERVAL=300
GIT_CHECK_INTERVAL=3600
STATUS_NOTIFICATION_INTERVAL=7200
MAX_RESTART_ATTEMPTS=3
RESTART_COOLDOWN=60

# 시스템 리소스 임계값
CPU_THRESHOLD=80
MEMORY_THRESHOLD=85
DISK_THRESHOLD=90

# 로그 설정
LOG_FILE=logs/watchhamster_cursor.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# WatchHamster Python 백엔드 프로덕션 환경 설정

# 기본 서버 설정
DEBUG=false
LOG_LEVEL=info
HOST=localhost
PORT=8000
RELOAD=false
WORKERS=4

# CORS 설정
CORS_ORIGINS=["tauri://localhost"]
CORS_ALLOW_CREDENTIALS=false
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE"]
CORS_ALLOW_HEADERS=["Content-Type", "Authorization"]

# 데이터베이스 설정 (프로덕션용)
DATABASE_URL=sqlite:///./production_database.db
DATABASE_ECHO=false

# 로깅 설정
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=app.log
LOG_MAX_SIZE=52428800
LOG_BACKUP_COUNT=10

# 외부 서비스 설정
WEBHOOK_TIMEOUT=15
WEBHOOK_RETRY_COUNT=2
WEBHOOK_RETRY_DELAY=2

# 파일 시스템 설정
MAX_LOG_SIZE=52428800
LOG_RETENTION_DAYS=30
TEMP_DIR=./temp
UPLOAD_DIR=./uploads

# POSCO 시스템 설정
POSCO_BRANCH=main
POSCO_DEPLOY_PATH=./deploy
POSCO_GIT_REMOTE=origin
POSCO_AUTO_DEPLOY=true

# 성능 설정
CACHE_TTL=600
MAX_CONNECTIONS=200
REQUEST_TIMEOUT=15

# 보안 설정 (프로덕션용)
SECRET_KEY=${SECRET_KEY}
ENABLE_DOCS=false
ENABLE_REDOC=false

# 모니터링 설정
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=60
PERFORMANCE_MONITORING=false
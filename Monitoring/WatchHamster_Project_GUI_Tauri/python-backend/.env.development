# WatchHamster Python 백엔드 개발 환경 설정

# 기본 서버 설정
DEBUG=true
LOG_LEVEL=debug
HOST=localhost
PORT=8000
RELOAD=true
WORKERS=1

# CORS 설정
CORS_ORIGINS=["http://localhost:1420", "http://localhost:3000", "http://localhost:5173", "tauri://localhost"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# 데이터베이스 설정 (개발용)
DATABASE_URL=sqlite:///./dev_database.db
DATABASE_ECHO=true

# 로깅 설정
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# 외부 서비스 설정
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_COUNT=3
WEBHOOK_RETRY_DELAY=1

# 파일 시스템 설정
MAX_LOG_SIZE=10485760
LOG_RETENTION_DAYS=7
TEMP_DIR=./temp
UPLOAD_DIR=./uploads

# POSCO 시스템 설정
POSCO_BRANCH=development
POSCO_DEPLOY_PATH=./deploy
POSCO_GIT_REMOTE=origin
POSCO_AUTO_DEPLOY=false

# 성능 설정
CACHE_TTL=300
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30

# 보안 설정 (개발용)
SECRET_KEY=dev-secret-key-change-in-production
ENABLE_DOCS=true
ENABLE_REDOC=true

# 모니터링 설정
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
PERFORMANCE_MONITORING=true
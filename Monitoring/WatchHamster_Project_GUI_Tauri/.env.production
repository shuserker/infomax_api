# WatchHamster Tauri 프로덕션 환경 설정

# API 설정
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws

# 애플리케이션 정보
VITE_APP_NAME=WatchHamster Tauri
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=현대적인 WatchHamster GUI 시스템

# 프로덕션 모드 설정
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error
VITE_ENABLE_DEVTOOLS=false

# 기능 플래그
VITE_ENABLE_HOT_RELOAD=false
VITE_ENABLE_ERROR_OVERLAY=false
VITE_ENABLE_PERFORMANCE_MONITORING=false

# UI 설정
VITE_DEFAULT_THEME=light
VITE_ENABLE_ANIMATIONS=true
VITE_REFRESH_INTERVAL=10000

# 테스트 설정
VITE_MOCK_API=false
VITE_TEST_MODE=false

# 보안 설정 (프로덕션용)
VITE_ENABLE_CORS=false
VITE_ALLOW_UNSAFE_EVAL=false
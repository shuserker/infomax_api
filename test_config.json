        "timeout": 180,
        "critical": true,
        "tests": [
          "test_full_system_startup_shutdown",
          "test_system_restart_scenario"
        ]
      },
      "stress_test": {
        "name": "스트레스 테스트",
        "description": "다중 프로세스 및 고부하 상황 테스트",
        "timeout": 300,
        "critical": true,
        "tests": [
          "test_concurrent_process_management",
          "test_high_load_stability"
        ]
      },
      "failure_simulation": {
        "name": "실패 시뮬레이션 테스트",

        "timeout": 240,
        "critical": true,
        "tests": [
          "test_immediate_crash_handling",
          "test_delayed_failure_detection",
          "test_resource_exhaustion_handling"
        ]
      },
      "continuous_integration": {
        "name": "연속 통합 테스트",
        "description": "지속적인 검증을 위한 통합 테스트 스위트",
        "timeout": 360,
        "critical": false,
        "tests": [
          "test_continuous_integration_suite"
        ]
      }
    },
    "performance_thresholds": {
      "max_startup_time": 30,
      "max_shutdown_time": 15,
      "max_cpu_usage_percent": 80,

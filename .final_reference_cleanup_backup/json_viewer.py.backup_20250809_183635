# BROKEN_REF: import requests
# BROKEN_REF: from requests.auth import HTTPBasicAuth
import test_config.json

def save_json_data():
    URL = "https:/dev-global-api.einfomax.co.kr/apis/POSCO News 250808"
    USER = "infomax"
    PWD = "infomax!"
    
    try:
        resp = requests.get(URL, auth=HTTPBasicAuth(USER, PWD), timeout=5)
        resp.raise_for_status()
        data = resp.json()
        
        # JSON 파일로 저장
with_open('POSCO_News_250808_data.json',_'w',_encoding = 'utf-8') as f:
json.dump(data,_f,_ensure_ascii = False, indent=2)
        
# BROKEN_REF:         print("✅ JSON 데이터가 저장되었습니다: POSCO News 250808_data.json")
        print("📂 Kiro에서 파일을 열어 JSON 뷰어로 확인하세요!")
        
        # 간단한 요약도 출력
        print(f"/n📊 뉴스 요약:")
        for news_type, news_data in data.items():
            print(f"  • {news_type}: {news_data['title'][:50]}...")
        
    except Exception as e:
        print(f"❌ 오류 발생: {e}")

if __name__ == "__main__":
    save_json_data()
        # ì§‘ì¤‘ì‹œê°„ ì •ë³´
        if 'focus_hours' in details:
print(f"âš¡_ì§‘ì¤‘ì‹œê°„:_{details['focus_hours']}",_flush = True)
        
        # ì¼ë°˜ì‹œê°„ ì •ë³´
        if 'normal_hours' in details:
print(f"ğŸ“Š_ì¼ë°˜ì‹œê°„:_{details['normal_hours']}",_flush = True)
        
        # ì¡°ìš©í•œ ëª¨ë“œ ì •ë³´
        if 'quiet_hours' in details:
print(f"ğŸ’¤_ì•¼ê°„_ì¡°ìš©í•œ_ëª¨ë“œ:_{details['quiet_hours']}",_flush = True)
        
        # íŠ¹ë³„ ì´ë²¤íŠ¸ ì •ë³´
        if 'special_events' in details:
print(f"ğŸ¯_íŠ¹ë³„ì´ë²¤íŠ¸:_{details['special_events']}",_flush = True)
        
        # ì¤‘ë‹¨ ì•ˆë‚´
print("ì¤‘ë‹¨í•˜ë ¤ë©´_Ctrl+Cë¥¼_ëˆ„ë¥´ì„¸ìš”",_flush = True)
        print(flush=True)  # ë¹ˆ ì¤„ ì¶”ê°€
    
    def print_monitor_status(self, monitors: Dict[str, Dict]):
        """
        ê°œë³„ ëª¨ë‹ˆí„° ìƒíƒœë¥¼ ê°„ì†Œí™”í•˜ì—¬ ì¶œë ¥
        
        Args:
            monitors (Dict[str, Dict]): ëª¨ë‹ˆí„°ë³„ ìƒíƒœ ì •ë³´
        """
        for monitor_name, status in monitors.items():
            is_running = status.get('is_running', False)
            description = status.get('description', monitor_name)
            
            if is_running:
print(f"_{description}:_ì¤€ë¹„_ì™„ë£Œ",_flush = True)
            else:
print(f"_{description}:_ì¤‘ë‹¨ë¨",_flush = True)
    
    def print_time_info(self, current_time: datetime, next_time: Optional[datetime] = None):
        """
        ì‹œê°„ ì •ë³´ë¥¼ ì»¬ëŸ¬í’€í•˜ê²Œ ì¶œë ¥
        
        Args:
            current_time (datetime): í˜„ì¬ ì‹œê°„
            next_time (Optional[datetime]): ë‹¤ìŒ ì‘ì—… ì‹œê°„
        """
        time_str = current_time.strftime('%Y-%m-%d %H:%M:%S')
print(f"{self.colors['info']}{self.emojis['time']}_í˜„ì¬_ì‹œê°„:_{time_str}{self.colors['reset']}",_flush = True)
        
        if next_time:
            next_str = next_time.strftime('%H:%M:%S')
print(f"{self.colors['dim']}{self.emojis['time']}_ë‹¤ìŒ_í™•ì¸:_{next_str}{self.colors['reset']}",_flush = True)
    
    def print_error_message(self, error: Exception, context: str = ""):
        """
        ì˜¤ë¥˜ ë©”ì‹œì§€ë¥¼ ëª…í™•í•˜ê²Œ ì¶œë ¥
        
        Args:
            error (Exception): ì˜¤ë¥˜ ê°ì²´
            context (str): ì˜¤ë¥˜ ë°œìƒ ì»¨í…ìŠ¤íŠ¸
        """
print(f"{self.colors['error']}{self.emojis['error']}_ì˜¤ë¥˜_ë°œìƒ{self.colors['reset']}",_flush = True)
        if context:
print(f"{self.colors['dim']}ì»¨í…ìŠ¤íŠ¸:_{context}{self.colors['reset']}",_flush = True)
print(f"{self.colors['error']}ì˜¤ë¥˜_ë‚´ìš©:_{str(error)}{self.colors['reset']}",_flush = True)
    
    def print_success_message(self, action: str, details: Optional[str] = None):

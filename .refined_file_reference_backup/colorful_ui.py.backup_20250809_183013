    def __init__(self):
        """ColorfulConsoleUI ì´ˆê¸°í™”"""
        self.setup_console()
        
        # ìƒ‰ìƒ í…Œë§ˆ ì •ì˜
        self.colors = {
            'header': Fore.GREEN + Style.BRIGHT,
            'success': Fore.GREEN,
            'warning': Fore.YELLOW,
            'error': Fore.RED + Style.BRIGHT,
            'info': Fore.CYAN,
            'highlight': Fore.MAGENTA + Style.BRIGHT,
            'normal': Fore.WHITE,
            'dim': Fore.WHITE + Style.DIM,
            'reset': Style.RESET_ALL
        }
        
        # ì´ëª¨ì§€ ì •ì˜
        self.emojis = {
            'start': 'ğŸ¹',
            'success': 'âœ…',
            'warning': 'âš ï¸',
            'error': 'âŒ',
            'info': 'â„¹ï¸',

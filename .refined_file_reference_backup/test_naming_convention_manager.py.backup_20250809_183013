        self.assertIn("POSCO News 250808 250808Monitor", report)
    
    def test_unknown_component_handling(self):
        """ì•Œ ìˆ˜ ì—†ëŠ” ì»´í¬ë„ŒíŠ¸ ì²˜ë¦¬ í…ŒìŠ¤íŠ¸"""
# BROKEN_REF:         result = self.manager.standardize_filename("random_file.py")
        

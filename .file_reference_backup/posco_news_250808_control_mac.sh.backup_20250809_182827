#!/bin/bash
# ============================================================================
# POSCO News 250808 Control Mac
# POSCO 시스템 제어센터
# 
# WatchHamster v3.0 및 POSCO News 250808 호환
# Created: 2025-08-08
# ============================================================================

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR"

# 색상 정의
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
WHITE='\033[1;37m'
GRAY='\033[0;37m'
RESET='\033[0m'

clear

echo
echo "============================================================================"
echo -e "${CYAN}📰 POSCO News 250808 Control Center (macOS)${RESET}"
echo "============================================================================"
echo

echo -e "${BLUE}📍 현재 경로: $(pwd)${RESET}"
echo -e "${BLUE}📍 POSCO News 250808 시스템을 제어합니다...${RESET}"
echo

# POSCO News 250808 디렉토리로 이동
if [[ -d "Monitoring/POSCO News 250808_mini" ]]; then
    echo -e "${GREEN}✅ POSCO News 250808 디렉토리 발견${RESET}"
    cd "Monitoring/POSCO News 250808_mini"
    
    # 제어 센터 스크립트 실행
    if [[ -f "posco_news_250808_control_center.sh" ]]; then
        echo -e "${GREEN}✅ POSCO News 250808 제어 센터 실행${RESET}"
        bash posco_news_250808_control_center.sh
    else
        echo -e "${RED}❌ POSCO News 250808 제어 센터를 찾을 수 없습니다.${RESET}"
        echo -e "${YELLOW}📁 파일: posco_news_250808_control_center.sh${RESET}"
    fi
else
    echo -e "${RED}❌ POSCO News 250808 디렉토리를 찾을 수 없습니다.${RESET}"
    echo -e "${YELLOW}📁 경로: Monitoring/POSCO News 250808_mini${RESET}"
fi

echo
read -p "계속하려면 Enter를 누르세요..."
#!/usr/bin/env python3
# -*- coding: utf-8 -*-
"""
Github Pages Deployer
POSCO ì‹œìŠ¤í…œ êµ¬ì„±ìš”ì†Œ

WatchHamster v3.0 ë° POSCO News 250808 í˜¸í™˜
Created: 2025-08-08
"""

import os
import subprocess
import shutil
from pathlib import Path
import time

class GitHubPagesDeployer:
    """GitHub Pages ë°°í¬ ê´€ë¦¬ í´ë˜ìŠ¤"""
    
    def __init__(self):
        self.repo_root = Path(__file__).parent.parent.parent  # infomax_api ë£¨íŠ¸
        self.reports_dir = Path(__file__).parent / 'reports'
        
    def deploy_report(self, report_filename):
        """
        ê°œë³„ ë¦¬í¬íŠ¸ë¥¼ GitHub Pagesì— ë°°í¬
        
        Args:
            report_filename (str): ë°°í¬í•  ë¦¬í¬íŠ¸ íŒŒì¼ëª…
            
        Returns:
            str: ë°°í¬ëœ URL ë˜ëŠ” None
        """
        try:
            source_file = self.reports_dir / report_filename
            if not source_file.exists():
                print(f"âŒ ë¦¬í¬íŠ¸ íŒŒì¼ì„ ì°¾ì„ ìˆ˜ ì—†ìŒ: {report_filename}")
                return None
            
            # Gitì— ì¶”ê°€ ë° ì»¤ë°‹
            if self._git_commit_report(report_filename):
                # GitHub Pages URL ë°˜í™˜
                return f"https://shuserker.github.io/infomax_api/reports/{report_filename}"
            else:
                return None
                
        except Exception as e:
            print(f"âŒ ë¦¬í¬íŠ¸ ë°°í¬ ì‹¤íŒ¨: {e}")
            return None
    
    def _git_commit_report(self, report_filename):
        """ë¦¬í¬íŠ¸ë¥¼ publish ë¸Œëœì¹˜ì—ë§Œ ë°°í¬"""
        try:
            os.chdir(self.repo_root)
            
            # í˜„ì¬ ë¸Œëœì¹˜ í™•ì¸
            current_branch = subprocess.run(['git', 'branch', '--show-current'], 
                                          capture_output=True, text=True).stdout.strip()
            
            # publish ë¸Œëœì¹˜ë¡œ ì „í™˜
            try:
                subprocess.run(['git', 'checkout', 'publish'], check=True)
            except subprocess.CalledProcessError:
                print("âŒ publish ë¸Œëœì¹˜ë¡œ ì „í™˜ ì‹¤íŒ¨")
                return False
            
            # reports ë””ë ‰í† ë¦¬ ìƒì„±
            os.makedirs('reports', exist_ok=True)
            
            # ë¦¬í¬íŠ¸ íŒŒì¼ë§Œ ë³µì‚¬
            source_file = self.reports_dir / report_filename
            dest_file = Path('reports') / report_filename
            
            if source_file.exists():
                shutil.copy2(source_file, dest_file)
                
                # ê°„ë‹¨í•œ index.html ìƒì„±
                self._create_publish_index()
                
                # Gitì— ì¶”ê°€ ë° ì»¤ë°‹
                subprocess.run(['git', 'add', 'reports/', 'index.html'], check=True)
                commit_message = f"Add report: {report_filename}"
                
                # ë³€ê²½ì‚¬í•­ì´ ìˆëŠ”ì§€ í™•ì¸
                result = subprocess.run(['git', 'diff', '--cached', '--quiet'], capture_output=True)
                if result.returncode == 0:
                    print("ğŸ“‹ ë³€ê²½ì‚¬í•­ ì—†ìŒ - ì´ë¯¸ ìµœì‹  ìƒíƒœ")
                    subprocess.run(['git', 'checkout', current_branch], check=True)
                    return True
                
                subprocess.run(['git', 'commit', '-m', commit_message], check=True)
                
                # publish ë¸Œëœì¹˜ì— í‘¸ì‹œ
                try:
                    subprocess.run(['git', 'push', 'origin', 'publish'], 
                                 check=True, timeout=30)
                    print(f"âœ… ë¦¬í¬íŠ¸ publish ë¸Œëœì¹˜ì— í‘¸ì‹œ ì™„ë£Œ: {report_filename}")
                    
                    # ì›ë˜ ë¸Œëœì¹˜ë¡œ ëŒì•„ê°€ê¸°
                    subprocess.run(['git', 'checkout', current_branch], check=True)
                    return True
                    
                except subprocess.TimeoutExpired:
                    print("âš ï¸ Git í‘¸ì‹œ íƒ€ì„ì•„ì›ƒ - ë¡œì»¬ íŒŒì¼ì€ ìƒì„±ë¨")
                    subprocess.run(['git', 'checkout', current_branch], check=True)
                    return True  # ë¡œì»¬ íŒŒì¼ì€ ìƒì„±ë˜ì—ˆìœ¼ë¯€ë¡œ True ë°˜í™˜
                except subprocess.CalledProcessError as e:
                    print(f"âš ï¸ Git í‘¸ì‹œ ì‹¤íŒ¨: {e} - ë¡œì»¬ íŒŒì¼ì€ ìƒì„±ë¨")
                    subprocess.run(['git', 'checkout', current_branch], check=True)
                    return True  # ë¡œì»¬ íŒŒì¼ì€ ìƒì„±ë˜ì—ˆìœ¼ë¯€ë¡œ True ë°˜í™˜
            else:
                print(f"âŒ ë¦¬í¬íŠ¸ íŒŒì¼ì„ ì°¾ì„ ìˆ˜ ì—†ìŒ: {report_filename}")
                subprocess.run(['git', 'checkout', current_branch], check=True)
                return False
                
        except Exception as e:
            print(f"âŒ Git ì‘ì—… ì‹¤íŒ¨: {e}")
            return False
    
    def _create_publish_index(self):
        """publish ë¸Œëœì¹˜ìš© ëŒ€ì‹œë³´ë“œ index.html ìƒì„±"""
        # docs ë””ë ‰í† ë¦¬ì˜ ëŒ€ì‹œë³´ë“œ íŒŒì¼ë“¤ì„ ë³µì‚¬
        docs_dir = self.repo_root / 'docs'
        
        if docs_dir.exists():
            # ëŒ€ì‹œë³´ë“œ íŒŒì¼ë“¤ ë³µì‚¬
            dashboard_files = [
                'index.html',
                'reports_index.json',
                'status.json'
            ]
            
            for file in dashboard_files:
                source = docs_dir / file
                if source.exists():
                    shutil.copy2(source, file)
            
            # assets ë””ë ‰í† ë¦¬ ë³µì‚¬
            assets_source = docs_dir / 'assets'
            if assets_source.exists():
                if Path('assets').exists():
                    shutil.rmtree('assets')
                shutil.copytree(assets_source, 'assets')
            
            # reports ë””ë ‰í† ë¦¬ì˜ ë©”íƒ€ë°ì´í„° ì—…ë°ì´íŠ¸
            self._update_reports_metadata()
        else:
            # ê¸°ì¡´ ë°©ì‹ìœ¼ë¡œ í´ë°±
            self._create_legacy_index()
    
    def _update_reports_metadata(self):
        """reports_index.json ì—…ë°ì´íŠ¸"""
        import json
        from datetime import datetime
        
        reports_dir = Path('reports')
        if not reports_dir.exists():
            return
            
        html_files = list(reports_dir.glob('*.html'))
        html_files.sort(key=lambda x: x.stat().st_mtime, reverse=True)
        
        reports_data = []
        for html_file in html_files:
            filename = html_file.name
            file_stat = html_file.stat()
            
            # íŒŒì¼ëª…ì—ì„œ ë©”íƒ€ë°ì´í„° ì¶”ì¶œ
            report_id = filename.replace('.html', '')
            
            # ë‰´ìŠ¤ íƒ€ì… ì¶”ì¶œ
            if 'integrated' in filename:
                report_type = 'integrated'
                title = 'POSCO ë‰´ìŠ¤ í†µí•© ë¶„ì„ ë¦¬í¬íŠ¸'
                tags = ['í†µí•©ë¶„ì„', 'ì¼ì¼ë¦¬í¬íŠ¸', 'ì¢…í•©']
            elif 'exchange-rate' in filename:
                report_type = 'exchange-rate'
                title = 'POSCO ì„œí™˜ë§ˆê° ë¶„ì„ ë¦¬í¬íŠ¸'
                tags = ['í™˜ìœ¨', 'ë‹¬ëŸ¬', 'ì™¸í™˜']
            elif 'kospi-close' in filename:
                report_type = 'kospi-close'
                title = 'POSCO ì¦ì‹œë§ˆê° ë¶„ì„ ë¦¬í¬íŠ¸'
                tags = ['ì¦ì‹œ', 'KOSPI', 'ì£¼ì‹']
            elif 'newyork-market-watch' in filename:
                report_type = 'newyork-market-watch'
                title = 'POSCO ë‰´ìš•ë§ˆì¼“ì›Œì¹˜ ë¶„ì„ ë¦¬í¬íŠ¸'
                tags = ['ë‰´ìš•', 'í•´ì™¸ì¦ì‹œ', 'ê¸€ë¡œë²Œ']
            else:
                report_type = 'unknown'
                title = f'POSCO ë¶„ì„ ë¦¬í¬íŠ¸'
                tags = ['ë¶„ì„']
            
            # ë‚ ì§œ ì¶”ì¶œ (íŒŒì¼ëª…ì—ì„œ)
            import re
            date_match = re.search(r'(\d{8})_(\d{6})', filename)
            if date_match:
                date_str = date_match.group(1)
                time_str = date_match.group(2)
                date = f"{date_str[:4]}-{date_str[4:6]}-{date_str[6:8]}"
                time = f"{time_str[:2]}:{time_str[2:4]}:{time_str[4:6]}"
                created_at = f"{date}T{time}Z"
            else:
                created_at = datetime.fromtimestamp(file_stat.st_mtime).isoformat() + 'Z'
                date = datetime.fromtimestamp(file_stat.st_mtime).strftime('%Y-%m-%d')
                time = datetime.fromtimestamp(file_stat.st_mtime).strftime('%H:%M:%S')
            
            report_data = {
                "id": report_id,
                "filename": filename,
                "title": title,
                "type": report_type,
                "date": date,
                "time": time,
                "size": file_stat.st_size,
                "summary": {
                    "newsCount": 3 if report_type == 'integrated' else 1,
                    "completionRate": "3/3" if report_type == 'integrated' else "1/1",
                    "marketSentiment": "ê¸ì •" if report_type == 'integrated' else "ì•ˆì •",
                    "keyInsights": ["ì‹œì¥ ë¶„ì„", "íŠ¸ë Œë“œ íŒŒì•…"]
                },
                "tags": tags,
                "url": f"https://shuserker.github.io/infomax_api/reports/{filename}",
                "createdAt": created_at
            }
            
            reports_data.append(report_data)
        
        # reports_index.json ì—…ë°ì´íŠ¸
        index_data = {
            "lastUpdate": datetime.now().isoformat() + 'Z',
            "totalReports": len(reports_data),
            "reports": reports_data
        }
        
        with open('reports_index.json', 'w', encoding='utf-8') as f:
            json.dump(index_data, f, ensure_ascii=False, indent=2)
    
    def _create_legacy_index(self):
        """ê¸°ì¡´ ë°©ì‹ì˜ index.html ìƒì„± (í´ë°±)"""
        # í˜„ì¬ reports ë””ë ‰í† ë¦¬ì˜ HTML íŒŒì¼ ëª©ë¡ ìƒì„±
        reports_dir = Path('reports')
        html_files = list(reports_dir.glob('*.html')) if reports_dir.exists() else []
        html_files.sort(key=lambda x: x.stat().st_mtime, reverse=True)
        
        reports_list = ""
        for html_file in html_files[:20]:  # ìµœê·¼ 20ê°œë§Œ
            filename = html_file.name
            file_time = time.ctime(html_file.stat().st_mtime)
            
            # ë‰´ìŠ¤ íƒ€ì… ì¶”ì¶œ
            if 'exchange-rate' in filename:
                news_type = 'ğŸ’± ì„œí™˜ë§ˆê°'
            elif 'kospi-close' in filename:
                news_type = 'ğŸ“ˆ ì¦ì‹œë§ˆê°'
            elif 'newyork-market-watch' in filename:
                news_type = 'ğŸŒ† ë‰´ìš•ë§ˆì¼“ì›Œì¹˜'
            else:
                news_type = 'ğŸ“° ë‰´ìŠ¤'
            
            reports_list += f"""
            <div class="report-item">
                <div class="report-title">{news_type} ë¶„ì„ ë¦¬í¬íŠ¸</div>
                <div class="report-meta">ìƒì„±ì¼: {file_time}</div>
                <a href="./reports/{filename}" class="report-link">ğŸ“Š ë¦¬í¬íŠ¸ ë³´ê¸°</a>
            </div>
            """
        
        html_content = f"""<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ğŸ“Š POSCO ë‰´ìŠ¤ ë¶„ì„ ë¦¬í¬íŠ¸</title>
    <style>
        body {{
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            margin: 0;
            padding: 20px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }}
        .container {{
            max-width: 800px;
            margin: 0 auto;
            background: white;
            border-radius: 15px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            overflow: hidden;
        }}
        .header {{
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            color: white;
            padding: 30px;
            text-align: center;
        }}
        .content {{
            padding: 30px;
        }}
        .report-item {{
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin: 15px 0;
            border-left: 4px solid #4facfe;
        }}
        .report-title {{
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 10px;
        }}
        .report-meta {{
            color: #7f8c8d;
            font-size: 0.9em;
            margin-bottom: 15px;
        }}
        .report-link {{
            display: inline-block;
            background: #4facfe;
            color: white;
            padding: 8px 16px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: 500;
        }}
        .report-link:hover {{
            background: #3498db;
        }}
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>ğŸ“Š POSCO ë‰´ìŠ¤ AI ë¶„ì„ ë¦¬í¬íŠ¸</h1>
            <p>ì‹¤ì‹œê°„ ì‹œì¥ ë¶„ì„ ë° íˆ¬ì ì¸ì‚¬ì´íŠ¸</p>
        </div>
        <div class="content">
            <h2>ğŸ“‹ ìµœê·¼ ë¶„ì„ ë¦¬í¬íŠ¸</h2>
            {reports_list}
        </div>
    </div>
</body>
</html>"""
        
        with open('index.html', 'w', encoding='utf-8') as f:
            f.write(html_content)

# ì „ì—­ ì¸ìŠ¤í„´ìŠ¤
deployer = GitHubPagesDeployer()

def deploy_report_to_github(report_filename):
    """ë¦¬í¬íŠ¸ë¥¼ GitHub Pagesì— ë°°í¬"""
    return deployer.deploy_report(report_filename)

if __name__ == "__main__":
    # í…ŒìŠ¤íŠ¸ ì‹¤í–‰
    print("GitHub Pages ë°°í¬ ì‹œìŠ¤í…œ ì¤€ë¹„ ì™„ë£Œ")